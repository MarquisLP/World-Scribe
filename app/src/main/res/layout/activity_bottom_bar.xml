<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.BottomBar"
    android:id="@+id/linearBar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peopleButton"
        android:background="?attr/colorPrimary"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottomButtonPadding"
        android:paddingTop="@dimen/bottomButtonPadding"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/peopleButtonImage"
            android:src="@drawable/people_icon"
            android:contentDescription="@string/peopleText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/peopleButtonText"
            android:textSize="@dimen/bottomBarTextSize"
            android:textColor="@android:color/white"
            android:text="@string/peopleText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupsButton"
        android:background="?attr/colorPrimary"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottomButtonPadding"
        android:paddingTop="@dimen/bottomButtonPadding"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/groupsButtonImage"
            android:src="@drawable/groups_icon"
            android:contentDescription="@string/groupsText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/groupsButtonText"
            android:textSize="@dimen/bottomBarTextSize"
            android:textColor="@android:color/white"
            android:text="@string/groupsText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placesButton"
        android:background="?attr/colorPrimary"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottomButtonPadding"
        android:paddingTop="@dimen/bottomButtonPadding"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/placesButtonImage"
            android:src="@drawable/places_icon"
            android:contentDescription="@string/itemsText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/placesButtonText"
            android:textSize="@dimen/bottomBarTextSize"
            android:textColor="@android:color/white"
            android:text="@string/placesText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemsButton"
        android:background="?attr/colorPrimary"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottomButtonPadding"
        android:paddingTop="@dimen/bottomButtonPadding"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/itemsButtonImage"
            android:src="@drawable/items_icon"
            android:contentDescription="@string/groupsText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/itemsButtonText"
            android:textSize="@dimen/bottomBarTextSize"
            android:textColor="@android:color/white"
            android:text="@string/itemsText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conceptsButton"
        android:background="?attr/colorPrimary"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottomButtonPadding"
        android:paddingTop="@dimen/bottomButtonPadding"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/conceptsButtonImage"
            android:src="@drawable/concepts_icon"
            android:contentDescription="@string/groupsText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/conceptsButtonText"
            android:textSize="@dimen/bottomBarTextSize"
            android:textColor="@android:color/white"
            android:text="@string/conceptsText"
            />
    </LinearLayout>

</LinearLayout>
