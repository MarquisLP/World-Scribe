<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/root">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/renameArticleTitle"
        android:id="@+id/title"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:textSize="@dimen/dialogTitleSize"
        android:padding="@dimen/abc_dialog_padding_material" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameField"
        android:inputType="text"
        android:layout_marginBottom="@dimen/dialogPaddingAboveButtons"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/standardTextSize"
        android:layout_marginLeft="@dimen/dialogTextboxHorizontalMargin"
        android:layout_marginRight="@dimen/dialogTextboxHorizontalMargin" />
</LinearLayout>